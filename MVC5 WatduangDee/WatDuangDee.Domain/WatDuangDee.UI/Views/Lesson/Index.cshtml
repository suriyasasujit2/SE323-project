@model IEnumerable<WatDuangDee.Domain.Entities.Lesson>

@{
    ViewBag.Title = "Index";
}

<h2>Index (หน้าดูแล สาระธรรม) </h2>

<p>
    @Html.ActionLink("Create New (เพิ่ม สาระธรรม)", "Create")
</p>
<center>
    <h3>
        <p class="text-success">
            @if (TempData["message"] != null)
            {
                @Html.Raw(TempData["message"]);
            }
        </p>
    </h3>
</center>
<table class="table">
    <tr>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.ImageData)
        </th>
        <th class="col-md-2">

        </th>
    
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Topic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>

            @if (item.ImageData != null)
            {

                <img width="30%" height="30% " src="@Url.Action("GetImage", "Lesson", new { id = item.LessonId })" />


            }
            else
            {
                @Html.Raw("No")
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LessonId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LessonId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LessonId })
        </td>
    </tr>
}

</table>

@model WatDuangDee.Domain.Entities.Lesson

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<script src="~/content/datetimepicker-master/jquery.js"></script>
<script src="~/content/datetimepicker-master/jquery.datetimepicker.js"></script>
<link rel="stylesheet" type="text/css" href="datetimepicker-master/jquery.datetimepicker.css" />
<script>
    $('#datetimepicker1').datetimepicker({
        datepicker: false,
        format: 'H:i',
        step: 1
    });
</script>
@using (Html.BeginForm("Edit", "Lesson", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <table class="table">
            <thead>
                <tr>
                    <th>Lesson</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.LessonId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Topic, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Topic)
                                @Html.ValidationMessageFor(model => model.Topic)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.date, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.date, new { @id = "datetimepicker1" })

                            </div>
                            <div class="col-md-10"><div class="validation-summary-errors">Current Date : @Html.DisplayFor(model => model.date)</div></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.description, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.description)
                                @Html.ValidationMessageFor(model => model.description)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ImageData, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">

                                <div class="editor-field">
                                    <br />

                                    @if (Model.ImageData == null)
                                    {
                                        @:None

                                    }

                                    else
                                    {
                                        <img width="30%" height="30% " src="@Url.Action("GetImage", "Lesson", new { id = Model.LessonId })" />

                                    }

                                    <div> <br /> Upload new image: <input type="file" name="Image" /></div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

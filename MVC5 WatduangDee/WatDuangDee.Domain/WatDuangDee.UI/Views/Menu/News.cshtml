@model IEnumerable<WatDuangDee.Domain.Entities.News>
@{
    ViewBag.Title = "News";
}
 
<div class="panel panel-primary">
    <div class="panel-heading"><h3>ข่าวสาร</h3></div>
   
    <div class="panel-body">
       

        @foreach (var item in Model)
        {
          
if (item.ImageData != null)
                {
    <div class="col-md-6">
  <a width="16%" align="center"><img src="@Url.Action("GetImage", "Menu", new { id = item.NewsId,Type=3 })" width="150" height="113" />&nbsp;@Html.ActionLink(item.Topic, "NewsDetail", new { id = item.NewsId})</a></div>   
                }
else
{
    
     <div class="col-md-6">
        <a width="16%" align="center"><img src="~/Content/images/new_pic.png" width="150" height="113" />&nbsp;@Html.ActionLink(item.Topic, "NewsDetail", new { id = item.NewsId })</a></div> 
     
}
            
        }
    
   
    
    </div>
</div>